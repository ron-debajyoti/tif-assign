{
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module",
        "ecmaFeatures": {
        "jsx": true
        }
    },

    "extends": ["airbnb","prettier"],
    "plugins": [
        "prettier",
        "jest",
        "import",
        "react-hooks"
    ],

    "rules": {
        "prettier/prettier" : ["error"]
    },

    "env": {
        "es6": true,
        "node": true,
        "browser": true,
        "jest/globals": true
    }
}